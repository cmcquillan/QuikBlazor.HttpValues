<HttpValue TValue="SimpleData" 
           Url="@Url" 
           @bind-Value="Data" />


@if (Data is not null)
{
    <div id="data">
        <h1>@Data.Id</h1>
        <h2>@Data.Name</h2>
        <h3>@Data.Description</h3>
    </div>
}

@code {
    [Parameter]
    public string? Url { get; set; }

    public SimpleData? Data { get; set; }
}
